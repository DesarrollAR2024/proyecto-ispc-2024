<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_faq"
    tools:context=".EditUserActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="410dp"
        android:layout_height="77dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/trivia_gamer_logo" />


    <EditText
        android:id="@+id/userIdEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="ID del Usuario"
        android:inputType="number" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/default_button_bg"
        android:text="Buscar Usuario"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Nombre de Usuario: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:background="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text="Contraseña: " />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:text="Puntaje: "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="Nuevo Nombre de Usuario" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="Nueva Contraseña" />

    <EditText
        android:id="@+id/newScoreEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="Nuevo Puntaje"
        android:inputType="number" />

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/default_button_bg"
        android:text="Modificar Usuario"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_button_bg"
        android:text="Eliminar Usuario"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/default_button_bg"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25sp" />

</LinearLayout>